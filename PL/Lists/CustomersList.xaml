<UserControl x:Class="PL.CustomersList"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:PL"
        mc:Ignorable="d"
         Height="450" Width="800">
    <Grid>

        <ListView x:Name="CustomersListView" ItemsSource="{Binding}">
            <ListView.ItemTemplate>
                <ItemContainerTemplate>
                    <ContentControl Content="{Binding }" MouseDoubleClick="ContentControl_MouseDoubleClick" FontFamily="Copperplate Gothic Bold"  ></ContentControl>
                </ItemContainerTemplate>
            </ListView.ItemTemplate>

        </ListView>
    </Grid>
</UserControl>
