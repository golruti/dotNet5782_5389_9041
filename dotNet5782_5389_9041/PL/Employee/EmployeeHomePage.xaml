<UserControl x:Class="PL.EmployeeHomePage"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:PL"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">

    <Grid x:Name="MainGrid">
        <Grid.RowDefinitions>
            <RowDefinition Height="100*"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <StackPanel Orientation="Horizontal" x:Name="button" Grid.Column="0">
            <Button Content="drones list" Click="ShowDroneListWindow"/>
            <Button Content="parcels list" Click="ShowParcelListWindow"/>
            <Button Content="Base stations list" Click="ShowBaseStationListWindow" />
            <Button Content="Customers List"  Click="showCustomersListWindow"/>
        </StackPanel>

        
    </Grid>
    
</UserControl>
